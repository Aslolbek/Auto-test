<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #e0f7fa;
            color: #004d40;
        }

        header {
            background-color: #00695c;
            color: white;
            padding: 20px;
            text-align: center;
        }

        nav {
            background-color: #00796b;
            padding: 15px;
            text-align: center;
        }

        nav a {
            color: white;
            padding: 12px 25px;
            text-decoration: none;
            font-size: 18px;
            margin: 0 15px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        nav a:hover {
            background-color: #004d40;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        h1 {
            text-align: center;
            margin-top: 0;
            color: #004d40;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #004d40;
        }

        input, button {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-sizing: border-box;
            font-size: 16px;
        }

        input:focus {
            border-color: #00796b;
            outline: none;
        }

        button {
            background-color: #00796b;
            color: white;
            cursor: pointer;
            border: none;
            font-size: 18px;
        }

        button:hover {
            background-color: #004d40;
        }

        .message {
            margin-top: 20px;
            padding: 15px;
            background-color: #4caf50;
            color: white;
            border-radius: 8px;
            text-align: center;
            display: none;
        }

        .footer {
            text-align: center;
            padding: 20px;
            background-color: #00695c;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header>
        <h1>Admin Panel</h1>
    </header>

    <!-- Navigation Menu -->
    <nav>
        <a href="/admin-page">Bosh sahifa</a>
        <a href="/test">Yangi Test Qo'shish</a>
        <a href="/open/register">Yangi Admin Qo'shish</a>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1>Yangi Mavzu Yaratish</h1>
        <form id="topicForm">
            <label for="topicName">Mavzu nomi:</label>
            <input type="text" id="topicName" name="name" required />
            <button type="submit">Yaratish</button>
        </form>
        <div id="successMessage" class="message">Mavzu yaratildi!</div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2025 Admin Panel</p>
    </div>

    <script>
        // Yangi mavzu yaratish
        document.getElementById('topicForm').addEventListener('submit', async (e) => {
            e.preventDefault(); // Formani oddiy yuborilishini oldini olish

            const topicName = document.getElementById('topicName').value;

            try {
                const response = await fetch('http://localhost:2000/subject-create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name: topicName }),
                });

                if (response.ok) {
                    const data = await response.json();

                    if (data.success) {
                        document.getElementById('successMessage').style.display = 'block';
                        document.getElementById('topicForm').reset();
                    }
                } else {
                    console.error('Mavzu yaratishda xato');
                }
            } catch (error) {
                console.error('AJAX xato', error);
            }
        });
    </script>
</body>
</html>